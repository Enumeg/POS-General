<Window x:Class="POS.Barcode" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Barcode"
        Width="200" WindowStartupLocation="CenterScreen" Style="{StaticResource Default_Window}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>
        <TextBox Grid.Column="1" Grid.Row="0" Style="{StaticResource  Edit_TextBox}" Text="{Binding Path=pro_name,Mode=OneTime}" Name="Amount_TB" />
        <Button Grid.Column="2" Grid.Row="1" Content="حفظ" Click="Add_Update_Product_Click" />
    </Grid>
</Window>
