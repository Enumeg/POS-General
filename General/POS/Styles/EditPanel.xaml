<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:cc="clr-namespace:Source;assembly=Source">
    <Style TargetType="{x:Type cc:EditPanel}">
        <Setter Property="cc:EditPanel.Add_String" Value="إضافة" />
        <Setter Property="cc:EditPanel.Edit_String" Value="تعديل" />
        <Setter Property="cc:EditPanel.Delete_String" Value="حذف" />
        <Setter Property="FontFamily" Value="Droid Arabic Naskh" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="White" />    
    </Style>
    <Style TargetType="cc:SavePanel">
        <Setter Property="cc:SavePanel.Save_String" Value="حفظ" />
        <Setter Property="cc:SavePanel.Cancel_String" Value="إلغاء" />
        <Setter Property="FontFamily" Value="Droid Arabic Naskh" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="White" />    
    </Style>
</ResourceDictionary>
    